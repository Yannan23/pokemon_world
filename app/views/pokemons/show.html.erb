<div class="container mt-3">
  <div class="d-flex align-items-center justify-content-center mt-3 mb-4">
    <h1 class="m-0"><%= @pokemon.name %></h1>
    <% if @pokemon.user === current_user %>
    <div>
      <%= link_to pokemon_path, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, style: "color: black;" do %>
      <i class="fa-solid fa-trash mx-3"></i>
      <% end %>
    </div>
    <% end %>
  </div>

  <%= render "shared/carousel" %>

  <div class="row d-flex">
    <div class="col-8">
      <div style="padding-top: 24px; padding-bottom: 24px;">
        <div class="d-flex align-items-center">
          <i class="nes-icon is-medium star mr-3"></i>
          <div><p class="m-0"> 23 reviews</p></div>

        </div>

        <p><%= @pokemon.overview %></p>
      </div>
    </div>

    <div class="col-4">
      <div class="price-card mt-auto" style="border: 1px solid rgb(221, 221, 221); border-radius: 12px; padding: 24px; box-shadow: rgba(0, 0, 0, 0.12) 0px 6px 16px; width: 100%">
        <h2>Price</h2>
        <div>
          <p style="text-align: right; padding-right: 30px">$ <%= @pokemon.price %> AUD</p>

        </div>
        <div class="d-grid gap-2">
          <button type="button" class="nes-btn is-warning">
            <%= link_to "BOOK", new_pokemon_booking_path(@pokemon) %>
          </button>
          <%#= render "shared/form" %>
        </div>
      </div>
    </div>
  </div>
  <div data-controller="map"
    id="map" class ="mt-4"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
    data-map-markers-value="<%= @markers.to_json %>"
    style="width: 100%; height: 60vh;">
  </div>
</div>
