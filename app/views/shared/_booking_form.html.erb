<%= simple_form_for([@pokemon, @booking]) do |f| %>
  <div class="container">
    <div class="form-group">
      <%= f.input :start_date,
      placeholder: "Pick up date",
      as: :string,
      input_html: { data: { controller: "datepicker"} } %>
    </div>
    <div class="form-group">
      <%= f.input :end_date,
      placeholder: "Drop off date",
      as: :string,
      input_html: { data: { controller: "datepicker"} } %>
    </div>
    <div class="form-group">
      <%= f.button :submit, "Book Now", class: 'btn btn-primary mt-2' %>
    </div>
  </div>
<% end %>
